[colors]
; {{{
background = #111
background-alt = #222
foreground = #BDACB7
foreground-alt = #F5A2BB
primary = #F62BED
secondary = #00ff99
alert = #bd2c40
; }}}
[bar/satsu]
; {{{
# guess monitor
; monitor = eDP
width = 100%
height = 22
offset-x = 0%
offset-y = 0%
radius = 0
fixed-center = true
enable-ipc = true
#pseudo-transparency = true

separator =
background = ${colors.background}
foreground = ${colors.foreground}

line-size = 3
line-color = #f00

#border-size = 4
#border-color = #735787
border-size = 0
border-color = #00000000

padding-left = 2
padding-right = 0

module-margin-left = 1
module-margin-right = 1

; confusingly using those values are 1-indexed
font-0 = envypn:pixelsize=12;1
font-1 = unifont:fontformat=truetype:size=8:antialias=false;0
font-2 = siji:pixelsize=10;1
font-3 = Weather Icons:size=12;1
font-4 = FontAwesome
#font-0 = Fixed:pixelsize=14;
#font-1 = unifont:fontformat=truetype:size=12:antialias=false;0
#font-2 = siji:pixelsize=12;1
#font-3 = Fixed:pixelsize=14;

tray-detached = false
tray-position = right
tray-padding = 2
tray-scale = 1.0

cursor-click = pointer
cursor-scroll = ns-resize


modules-left = alsa cpu memory battery date keyboard xinput-lock
modules-center = i3 marks
modules-right = updates-void openweathermap-forecast eth wlan

; }}}
[module/marks]
; {{{
type = custom/ipc
format = <output>
format-foreground = ${colors.secondary}
# hook-0 disabled
hook-0 = echo ""
hook-1 = $HOME/scripts/i3_getmarks.sh
# the index is confusing because initial 1 means hook-0
initial = 1
; }}}
[module/acpi-warn]
; {{{
type = custom/script
format-foreground=${colors.foreground}
format-background = ${colors.alert}
format-padding = 1
format-prefix = "-- "
format = <label>
exec = pgrep acpid >/dev/null && echo "" || echo "ACPI"
label = "%output%"
interval = 10
; }}}
[module/xwindow]
; {{{
type = internal/xwindow
label = %title:0:30:...%
#format-foreground = #0000ff
format-padding = 2
; }}}
[module/keyboard]
; {{{
type = internal/xkeyboard
format = <label-indicator>
format-foreground = ${colors.foreground}
format-background = ${colors.alert}
format-padding = 0

label-indicator-padding = 1
label-indicator = %name%

; List of indicators to ignore
#blacklist-0 = num lock
#blacklist-1 = scroll lock
; }}}
[module/updates-void]
; {{{
type = custom/script
format-prefix = "xbps: "
format-prefix-foreground = ${colors.primary}
format = <label>
exec-if = pgrep xbps-install || /bin/true
exec = $HOME/scripts/updates-void.sh
label = "%output%"
interval = 120
; }}}
[module/i3]
; {{{
type = internal/i3
#format-prefix = "|"
#format-suffix = "|"
format =  <label-state> <label-mode>
index-sort = true
enable-scroll = false
enable-click = false
wrapping-scroll = false

label-mode-padding = 3
label-mode-foreground = ${colors.secondary}
label-mode-background = ${colors.background-alt}

; focused = Active workspace on focused monitor
label-focused = %index%
label-focused-background = ${colors.background-alt}
label-focused-underline = ${colors.foreground-alt}
label-focused-padding = 2
label-focused-font = 3

; unfocused = Inactive workspace on any monitor
label-unfocused = %index%
label-unfocused-background = ${colors.background}
label-unfocused-padding = 2
label-unfocused-font = 3

; visible = Active workspace on unfocused monitor
label-visible = %index%
label-visible-background = ${self.label-focused-background}
#label-visible-underline = ${self.label-focused-underline}
label-visible-padding = ${self.label-focused-padding}
label-visible-font = 3

; urgent = Workspace with urgency hint set
label-urgent = %index%
label-urgent-background = ${colors.alert}
label-urgent-padding = 2
label-urgent-font = 3

; Separator in between workspaces
#label-separator = |
; }}}
[module/cpu]
; {{{
type = internal/cpu
interval = 3
format-prefix = ""
format-prefix-foreground = ${colors.foreground-alt}
label = " %percentage:2%%"
; }}}
[module/memory]
; {{{
type = internal/memory
interval = 5
format-prefix = ""
format-prefix-foreground = ${colors.foreground-alt}
label = " %percentage_used%%"

; }}}
[module/wlan]
; {{{
type = internal/network
interface = wlp2s0
interval = 5
label-connected = %essid% (%local_ip%) |

format-connected = <ramp-signal> <label-connected>
format-disconnected =

ramp-signal-0 = 
ramp-signal-1 = 
ramp-signal-2 = 
ramp-signal-3 = 
ramp-signal-4 = 
ramp-signal-foreground = ${colors.foreground-alt}
; }}}
[module/eth]
; {{{
type = internal/network
interface = enp1s0
interval = 5

format-connected-prefix = " "
format-connected-prefix-foreground = ${colors.foreground-alt}
label-connected = %local_ip%
format-disconnected =
; }}}
[module/date]
; {{{
type = internal/date
interval = 5

date = " %a %d/%m"
; date-alt = " %a %d"

time = %H:%M
time-alt = %H:%M

format-prefix = 
format-prefix-foreground = ${colors.foreground-alt}
#format-underline = #0a6cf5

label = %date% %time%
; }}}
[module/alsa]
; {{{
type = internal/alsa

format-volume = <bar-volume>
#label-volume =
label-volume-foreground = ${colors.foreground-alt}

format-muted = <label-muted>
label-muted-foreground = ${colors.foreground-alt}
label-muted = " sound muted "

# gay https://www.color-hex.com/color-palette/28256
bar-volume-width = 16
bar-volume-foreground-0 = #74d7ec
bar-volume-foreground-1 = #74d7ec
bar-volume-foreground-2 = #74d7ec
bar-volume-foreground-3 = #ffafc7
bar-volume-foreground-4 = #ffafc7
bar-volume-foreground-5 = #ffafc7
bar-volume-foreground-6 = #fbf9f5
bar-volume-foreground-7 = #fbf9f5
bar-volume-foreground-8 = #fbf9f5
bar-volume-foreground-9 = #ffafc7
bar-volume-foreground-10 = #ffafc7
bar-volume-foreground-11 = #ffafc7
bar-volume-foreground-12 = #74d7ec
bar-volume-foreground-13 = #74d7ec
bar-volume-foreground-14 = #74d7ec
bar-volume-foreground-15 = #74d7ec
# bigger:
#i=0; echo 'bar-volume-width = 25'; for c in 74d7ec ffafc7 fbf9f5 ffafc7 74d7ec ; do for n in {0..4}; do echo "bar-volume-foreground-${i} = #${c}"; let i++; done; done

bar-volume-gradient = true
bar-volume-indicator = |
bar-volume-indicator-font = 2
bar-volume-fill = ─
bar-volume-fill-font = 2
bar-volume-empty = ─
bar-volume-empty-font = 2
bar-volume-empty-foreground = #333
; }}}
[module/battery]
; {{{
type = internal/battery
battery = BAT1
adapter = ACAD
full-at = 99

format-charging = <animation-charging> <label-charging>
format-charging-underline = ${colors.secondary}

format-discharging = <animation-discharging> <label-discharging>
format-discharging-underline = ${colors.alert}

#format-full-suffix = " |"
format-full-prefix = " "
format-full-prefix-foreground = ${colors.foreground-alt}

ramp-capacity-0 = 
ramp-capacity-1 = 
ramp-capacity-2 = 
ramp-capacity-foreground = ${colors.foreground-alt}

animation-charging-0 = 
animation-charging-1 = 
animation-charging-2 = 
animation-charging-foreground = ${colors.foreground-alt}
animation-charging-framerate = 450

animation-discharging-0 = 
animation-discharging-1 = 
animation-discharging-2 = 
animation-discharging-foreground = ${colors.foreground-alt}
animation-discharging-framerate = 1000
; }}}
