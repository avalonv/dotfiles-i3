!theme example: https://github.com/beingmohit/dotfiles/blob/master/config/rofi/config

rofi.theme: ~/.config/rofi/awfulpinktheme.rasi
rofi.run-shell-command: {terminal} -e {cmd}
rofi.ssh-command: {terminal} -e {ssh-client} {host}
rofi.run-command: {cmd}
rofi.icon-theme: Papirus
rofi.bw: 2
rofi.ssh-client: ssh
rofi.terminal: urxvt
rofi.show-icons: True
rofi.opacity: 40
!rofi.window-match-fields:
rofi.window-format: {c:8} >  {{w}} {n11} |  {t:80}
rofi.drun-display-format: {name}
rofi.matching: fuzzy
rofi.no-sort: True
!rofi.matching: regex
!rofi.filter: -@[hmr
!rofi.disable-history: True
rofi.case-sensitive: False
rofi.sidebar-mode: True
rofi.font:terminus bold 16
