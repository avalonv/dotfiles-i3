client.background       #111


#=====================
#========MODES========
#=====================
# i3-gaps bad
bindsym $mod+r mode "resize"
mode "resize" {
        bindsym h resize shrink width 20 px or 20 ppt
        bindsym j resize grow height 20 px or 20 ppt
        bindsym k resize shrink height 20 px or 20 ppt
        bindsym l resize grow width 20 px or 20 ppt

        bindsym Shift+h resize shrink width 4 px or 4 ppt
        bindsym Shift+j resize grow height 4 px or 4 ppt
        bindsym Shift+k resize shrink height 4 px or 4 ppt
        bindsym Shift+l resize grow width 4 px or 4 ppt

        # same bindings, but for the arrow keys
        bindsym Left  resize shrink width 4 px or 4 ppt
        bindsym Down  resize grow height 4 px or 4 ppt
        bindsym Up    resize shrink height 4 px or 4 ppt
        bindsym Right resize grow width 4 px or 4 ppt

        bindsym Shift+Left  resize shrink width 2 px or 2 ppt
        bindsym Shift+Down  resize grow height 2 px or 2 ppt
        bindsym Shift+Up    resize shrink height 2 px or 2 ppt
        bindsym Shift+Right resize grow width 2 px or 2 ppt

        # back to normal: Enter or Escape or $mod+r
        bindsym Return mode "default"
        bindsym Escape mode "default"
        bindsym $mod+r mode "default"
}

# mark a window
bindsym $mod+m mode "mark"
mode "mark" {
        bindsym $mod+1 mark --add --toggle M1, mark --add _last, mode "default"
        bindsym $mod+2 mark --add --toggle M2, mark --add _last, mode "default"
        bindsym $mod+3 mark --add --toggle M3, mark --add _last, mode "default"
        bindsym $mod+4 mark --add --toggle M4, mark --add _last, mode "default"
        bindsym $mod+5 mark --add --toggle M5, mark --add _last, mode "default"
        bindsym $mod+6 mark --add --toggle M6, mark --add _last, mode "default"
        bindsym $mod+7 mark --add --toggle M7, mark --add _last, mode "default"
        bindsym $mod+8 mark --add --toggle M8, mark --add _last, mode "default"
        bindsym $mod+9 mark --add --toggle M9, mark --add _last, mode "default"
        bindsym $mod+0 mark --add --toggle M0, mark --add _last, mode "default"

        bindsym Return mode "default"
        bindsym Escape mode "default"
        bindsym $mod+r mode "default"
}

# go to marked window
bindsym $mod+apostrophe mode "goto"
mode "goto" {

        bindsym $mod+1 [con_mark="M1"] focus, mark --add _last, mode "default"
        bindsym $mod+2 [con_mark="M2"] focus, mark --add _last, mode "default"
        bindsym $mod+3 [con_mark="M3"] focus, mark --add _last, mode "default"
        bindsym $mod+4 [con_mark="M4"] focus, mark --add _last, mode "default"
        bindsym $mod+5 [con_mark="M5"] focus, mark --add _last, mode "default"
        bindsym $mod+6 [con_mark="M6"] focus, mark --add _last, mode "default"
        bindsym $mod+7 [con_mark="M7"] focus, mark --add _last, mode "default"
        bindsym $mod+8 [con_mark="M8"] focus, mark --add _last, mode "default"
        bindsym $mod+9 [con_mark="M9"] focus, mark --add _last, mode "default"
        bindsym $mod+0 [con_mark="M0"] focus, mark --add _last, mode "default"

        bindsym Return mode "default"
        bindsym Escape mode "default"
        bindsym $mod+r mode "default"
}

# reload/lock/quit
bindsym $mod+Control+r mode "R|L|Q"
mode "R|L|Q" {
        bindsym $mod+R mode "default", reload, exec --no-startup-id "$HOME/scripts/i3_reload.sh 'hell' 'man' 'ranger'"
        bindsym $mod+L mode "default", exec --no-startup-id xautolock -locknow && sleep 10 && sudo zzz
        bindsym $mod+Q mode "quit?"
        bindsym $mod+c mode "cat?"

        bindsym $mod+y exec i3-msg exit
        bindsym $mod+n mode "default"
        bindsym Escape mode "default"
        bindsym Return mode "default"
}

mode "quit?" {
        bindsym $mod+y exec i3-msg exit
        bindsym $mod+n mode "default"
        bindsym Escape mode "default"
        bindsym Return mode "default"
}

mode "cat?" {
        bindsym $mod+y exec urxvt -e vim -u NORC -c "norm isversbkVlbhgh.or/DU2-GTHyjh4&fyrrcV5V&&kqbgbbyVxrlVs" \
        -c "norm g??" -c "s/I/ /g" -c '.w !bash', mode "default"
        bindsym $mod+n mode "default"
        bindsym Escape mode "default"
        bindsym Return mode "default"
}
