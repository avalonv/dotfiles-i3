#=====================
#=====VARIABLES=======
#=====================

# workspace names
set $mod Mod4
set $ws1 "1"
set $ws2 "2"
set $ws3 "3"
set $ws4 "4"
set $ws5 "5"
set $ws6 "6"
set $ws7 "7"
set $ws8 "8"
set $ws9 "9"
set $ws10 "0"

# scratchpad window names
set $S1_name "@hell"
set $S2_name "@man"
set $S3_name "@ranger"

# monitor names
set $main "eDP"
set $HDMI1 "HDMI-A-0"

font pango:terminus, Icons 10


#=====================
#=====EXEC=ONCE=======
#=====================

# wallpaper
exec --no-startup-id feh --bg-max ~/Pictures/Wallpapers/mice_big.png
exec --no-startup-id xrdb .Xresources

# keyboard with right alt for acentos
exec --no-startup-id setxkbmap -layout us -variant altgr-intl -option nodeadkeys

exec --no-startup-id sudo xbacklight -set 50
exec --no-startup-id pulseaudio --start &

# blank xscreensaver after x minutes of inactivity, lock with i3lock otherwise
exec --no-startup-id \
xautolock -detectsleep -time 2 -locker "xscreensaver-command -activate" -nowlocker $HOME/scripts/i3_lock.sh

## Auto-lock after suspend.
## # https://wiki.archlinux.org/index.php/Power_management#xss-lock
#exec --no-startup-id xss-lock -l -- "~/scripts/transfer-sleep-lock-i3lock.sh"&
exec --no-startup-id mate-power-manager &
exec --no-startup-id "sleep 5 && $HOME/scripts/i3_reload.sh 'start' 'hell' 'man' 'ranger' && xscreensaver -nosplash"


#=====================
#=====EXEC=ALWAYS=====
#=====================

# energy star
exec_always --no-startup-id xset dpms 70 120 300

# turn off god awful beep
exec_always --no-startup-id exec --no-startup-id xset b off


#=====================
#======BINDINGS=======
#=====================

# start a terminal
bindsym $mod+Return exec --no-startup-id urxvt &, focus

# restart i3
bindsym $mod+shift+r restart

# sound control
bindsym XF86AudioRaiseVolume exec --no-startup-id amixer sset Master "5%+"
bindsym XF86AudioLowerVolume exec --no-startup-id amixer sset Master "5%-"
bindsym XF86AudioMute        exec --no-startup-id amixer set Master toggle

# screen brightness
bindsym XF86MonBrightnessUp         exec --no-startup-id sudo xbacklight -inc 4
bindsym XF86MonBrightnessDown       exec --no-startup-id sudo xbacklight -dec 4
bindsym shift+XF86MonBrightnessUp   exec --no-startup-id sudo xbacklight -inc 1
bindsym shift+XF86MonBrightnessDown exec --no-startup-id sudo xbacklight -dec 1

# rofi show progrmans
bindsym $mod+semicolon exec \
rofi -modi "drun#run" -show drun -lines 38 -width 18 -location 1

# rofi show windows
bindsym $mod+Tab exec \
rofi -modi "window#ssh#bindings:egrep '^bindsym' $HOME/.config/i3/config" -show window -lines 12 -width 68 -location 0

# hide/show polybar
bindsym $mod+Home exec --no-startup-id polybar-msg cmd toggle

# take screenshot of focused window/selected region (maim)
bindsym --release $mod+Shift+p  exec --no-startup-id \
maim -m 9 -s ~/Pictures/Screenshots/$(date +%F-%H%M%S)_maim.png

bindsym --release $mod+Shift+Print exec --no-startup-id \
maim -m 9 -s ~/Pictures/Screenshots/$(date +%F-%H%M%S)_maim.png

bindsym --release $mod+Print exec --no-startup-id \
maim -m 9 -i $(xdotool getactivewindow) ~/Pictures/Screenshots/$(date +%F-%H%M%S)_maim.png

bindsym --release $mod+p exec --no-startup-id \
maim -m 9 -i $(xdotool getactivewindow) ~/Pictures/Screenshots/$(date +%F-%H%M%S)_maim.png

# scrot:
#bindsym --release $mod+Shift+p     exec --no-startup-id scrot -s -q 100 -e 'mv $f ~/Pictures/Screenshots/'
#bindsym --release $mod+Shift+Print exec --no-startup-id scrot -s -q 100 -e 'mv $f ~/Pictures/Screenshots/'
#bindsym --release $mod+Print       exec --no-startup-id scrot -u -q 100 -e 'mv $f ~/Pictures/Screenshots/'
#bindsym --release $mod+p           exec --no-startup-id scrot -u -q 100 -e 'mv $f ~/Pictures/Screenshots/'

# lock screen (now)
bindsym $mod+Control+l focus output primary; exec --no-startup-id xautolock -locknow


#=====================
#===MOUSE=BINDINGS====
#=====================

# simulate mouse buttons
#bindsym --release $mod+z exec --no-startup-id xdotool click --clearmodifiers 1
#bindsym --release $mod+x exec --no-startup-id xdotool click --clearmodifiers 3
#######bindsym $mod+z exec xvkbd -no-repeat -no-jump-pointer -text '\m1'
bindsym $mod+z exec xvkbd -no-repeat -no-jump-pointer -text '\m3'
#bindsym $mod+Mod1+j exec xvkbd -no-jump-pointer -no-repeat -text '\m4'
#bindsym $mod+Mod1+k exec xvkbd -no-jump-pointer -no-repeat -text '\m5'
bindsym $mod+Mod1+j exec xvkbd -no-jump-pointer -text '\[Page_Down]'
bindsym $mod+Mod1+k exec xvkbd -no-jump-pointer -text '<PageUp>'

# Disable focus change for clicks on titlebars
# with the middle mouse button
bindsym button1 nop
bindsym button2 nop
bindsym button3 nop
bindsym button4 nop
bindsym button5 nop

#=====================
#====WIN=BINDINGS=====
#=====================

# use mouse+$mod to drag floating windows to their wanted position
floating_modifier $mod

# focus
bindsym $mod+h focus left
bindsym $mod+j focus down
bindsym $mod+k focus up
bindsym $mod+l focus right

bindsym $mod+Left focus left
bindsym $mod+Down focus down
bindsym $mod+Up focus up
bindsym $mod+Right focus right

# kill focused window
bindsym $mod+Shift+q kill

# toggle tiling/floating
bindsym $mod+space floating toggle

# toggle floating, and resize to a small rectangle
bindsym $mod+minus floating enable, resize set 800 600, move absolute position center

# change focus between tiling/floating
bindsym $mod+grave focus mode_toggle

# focus the parent/child container
bindsym $mod+a focus parent
bindsym $mod+d focus child

# move focused
 bindsym $mod+Shift+Left  move left
 bindsym $mod+Shift+Down  move down
 bindsym $mod+Shift+Up    move up
 bindsym $mod+Shift+Right move right

 bindsym $mod+Shift+h     move left 30px
 bindsym $mod+Shift+j     move down 30px
 bindsym $mod+Shift+k     move up 30px
 bindsym $mod+Shift+l     move right 30px

# i3_movecorner.sh
bindsym $mod+KP_End   exec --no-startup-id ~/scripts/i3_movecorner.sh 1
bindsym $mod+KP_Down  exec --no-startup-id ~/scripts/i3_movecorner.sh 2
bindsym $mod+KP_Next  exec --no-startup-id ~/scripts/i3_movecorner.sh 3
bindsym $mod+KP_Left  exec --no-startup-id ~/scripts/i3_movecorner.sh 4
bindsym $mod+KP_Begin exec --no-startup-id ~/scripts/i3_movecorner.sh 5
bindsym $mod+KP_Right exec --no-startup-id ~/scripts/i3_movecorner.sh 6
bindsym $mod+KP_Home  exec --no-startup-id ~/scripts/i3_movecorner.sh 7
bindsym $mod+KP_Up    exec --no-startup-id ~/scripts/i3_movecorner.sh 8
bindsym $mod+KP_Prior exec --no-startup-id ~/scripts/i3_movecorner.sh 9

# warp to mouse
bindsym $mod+c move position mouse

# split in vertical, horizontal orientation
bindsym $mod+v split v
bindsym $mod+b split h

# change container layout (stacked, tabbed, toggle split)
bindsym $mod+s layout stacking
bindsym $mod+w layout tabbed
bindsym $mod+e layout toggle split

# enter fullscreen
bindsym $mod+f fullscreen toggle


