#=====================
#=====SCRATCHPADS=====
#=====================

# aka "minimizable" windows
# "xwinfo" is useful for getting the sizes of windows
bindsym $mod+plus scratchpad show
bindsym $mod+x move scratchpad
bindsym $mod+shift+x move scratchpad, mark --add _last

# hide the named scratchpads
bindsym $mod+Escape [con_mark="^S[1-3]"] move scratchpad

# mark, goto last scratchpad window
bindsym $mod+o [con_mark="_last"] focus


# scratchpad 1 (hell)
for_window [instance=$S1_name] floating enable
for_window [instance=$S1_name] resize set 650 440
for_window [instance=$S1_name] mark S1, move scratchpad
for_window [instance=$S1_name] sticky enable
bindsym $mod+Shift+F1 [con_mark="S1"] focus
bindsym $mod+F1 [instance=$S1_name] scratchpad show

# scratchpad 2 (man)
for_window [instance=$S2_name] floating enable
for_window [instance=$S2_name] resize set 650 830
for_window [instance=$S2_name] mark S2, move scratchpad
for_window [instance=$S2_name] sticky enable
bindsym $mod+Shift+F2 [con_mark="S2"] focus
bindsym $mod+F2 [instance=$S2_name] scratchpad show

# scratchpad 3 (ranger)
for_window [instance=$S3_name] floating enable
for_window [instance=$S3_name] resize set 900 440
for_window [instance=$S3_name] mark S3, move scratchpad
for_window [instance=$S3_name] sticky enable
bindsym $mod+Shift+F3 [con_mark="S3"] focus
bindsym $mod+F3 [instance=$S3_name] scratchpad show


